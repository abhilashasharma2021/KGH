<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AllCourseShowActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_above="@+id/rl"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/rl_main"
                android:background="@color/darkBlue">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/back_arrow"
                android:padding="10dp"
                android:id="@+id/ivBack"
                android:visibility="visible"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/course_lists"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"/>


            </RelativeLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/rl_main"
                android:layout_margin="10dp"
                android:translationZ="15dp"
                app:cardCornerRadius="25dp"
                app:cardElevation="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_search"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:padding="3dp"
                        android:src="@drawable/search"
                        app:tint="@color/grey" />

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/iv_search"
                        android:background="@null"
                        android:fontFamily="@font/poppinsregular"
                        android:hint="@string/search_here"
                        android:maxLength="150"
                        android:singleLine="true"
                        android:textSize="14sp" />

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHomeStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_1"
                android:visibility="visible"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="150dp"
            android:gravity="center"
            android:id="@+id/rlPrevious"
            android:layout_marginLeft="10dp"
            android:background="@drawable/yellow_rounded"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/iv_pre"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/previous"
                />
            <TextView
                android:id="@+id/txt_pre"
                android:layout_toRightOf="@+id/iv_pre"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinseemibold"
                android:text="Previous"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>




        <RelativeLayout
            android:layout_width="150dp"
            android:gravity="center"
            android:id="@+id/rlNext"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/yellow_rounded"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/ivNext"
                android:layout_toRightOf="@+id/txt_next"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/nextnew"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/txt_next"

                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinseemibold"
                android:text="Next"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>