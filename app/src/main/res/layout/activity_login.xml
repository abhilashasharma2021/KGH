<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



        <ImageView
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/newlogo"
            android:layout_gravity="center"/>



        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
           android:fontFamily="@font/poppinsextrabold"
            android:gravity="center"
            android:textSize="16sp"
            android:text="Login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="@color/grey"
                android:gravity="center"
                android:textSize="14sp"
                android:fontFamily="@font/poppinseemibold"
                android:text="Login to your account using your login \n Credential that you used"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/txLogin"
                android:visibility="visible"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="35dp"
                        android:id="@+id/rl"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dotts"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/iv"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="5dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/email" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/rl"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:singleLine="true"
                            android:maxLength="40"
                            android:fontFamily="@font/poppinsregular"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@null"
                            android:hint="@string/email_address"
                            android:inputType="textEmailAddress"
                            android:paddingLeft="10dp"
                            android:textSize="14sp" />


                    </RelativeLayout>


                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRePass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/txLogin"
                android:visibility="visible"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="35dp"
                        android:id="@+id/rl1"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dotts"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="8dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/lock" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/rl1"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:singleLine="true"
                            android:maxLength="40"
                            android:fontFamily="@font/poppinsregular"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@null"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textSize="14sp" />


                    </RelativeLayout>


                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPass"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_below="@+id/txLogin"
                android:visibility="visible"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="35dp"
                        android:id="@+id/rl2"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/dotts"
                        android:layout_height="35dp">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:padding="8dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/lock" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/rl2"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/etRePass"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:singleLine="true"
                            android:fontFamily="@font/poppinsregular"
                            android:layout_marginRight="0dp"
                            android:layout_marginBottom="0dp"
                            android:background="@null"
                            android:maxLength="40"
                            android:hint="@string/re_enter_password"
                            android:inputType="textPassword"
                            android:paddingLeft="10dp"
                            android:textSize="14sp" />


                    </RelativeLayout>


                </RelativeLayout>


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="LOGIN"
                android:fontFamily="@font/poppinseemibold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtforgotPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black"
                    android:text=""
                    android:fontFamily="@font/poppinseemibold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtNew"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/poppinseemibold"
                    android:layout_below="@+id/txtforgotPass"
                    android:text=""
                    android:textSize="14sp" />


            </RelativeLayout>

        </LinearLayout>


    </ScrollView>
</RelativeLayout>