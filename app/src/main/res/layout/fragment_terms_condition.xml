<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.TermsConditionFrag">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms &amp; Conditions "
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:gravity="start"
        android:visibility="gone"
        android:fontFamily="@font/poppinsextrabold"
        android:layout_gravity="start"
        android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:id="@+id/txTerm"
            android:fontFamily="@font/poppinsregular"
            android:gravity="start"
            android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document "
            android:textColor="@color/grey"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terms &amp; Conditions Heading 2"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:gravity="start"
            android:visibility="gone"
            android:fontFamily="@font/poppinsextrabold"
            android:layout_gravity="start"
            android:textColor="@color/black"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In publishing and graphic design, Lorem ipsum is a placeholder text commonly used to demonstrate the visual form of a document "

            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:gravity="start"
            android:visibility="gone"
            android:layout_gravity="start"
            android:textSize="13sp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="@color/grey"/>

    </LinearLayout>
</ScrollView>
</RelativeLayout>